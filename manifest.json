{
  "manifest_version": 3,
  "name": "درع العفاف",
  "version": "1.0.0",
  "description": "حماية متقدمة من المحتوى غير اللائقي",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess"
  ],

  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/safe-search.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages/blocked.html",
        "pages/settings.html",
        "pages/about.html",
        "css/blocked.css",
        "css/popup.css",
        "js/background.js",
        "popup.html",
        "pages/blocked-tiktok.html",
        "pages/blocked-shorts.html",
        "pages/blocked-inst.html",
        "pages/blocked-facebook.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules/blocking_rules.json"
      }
    ]
  },
  "incognito": "spanning"
}